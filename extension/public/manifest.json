{
  "name": "WebNote",
  "description": "Create full-page annotate-able screenshots",
  "manifest_version": 3,
  "version": "1.0.0",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "tts",
    "ttsEngine"
  ],
  "action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png"
    },
    "default_title": "WebNote!",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "tts_engine": {
    "voices": [
      {
        "voice_name": "Alice",
        "lang": "en-US",
        "event_types": ["start", "marker", "end"]
      },
      {
        "voice_name": "Pat",
        "lang": "en-US",
        "event_types": ["end"]
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "*://*/*"
      ],
      "css": [
        "fun-chrome-effects.css"
      ]
    },
    {
      "matches": [
        "*://webnote.mudit.tech/*",
        "*://localhost:*/*"
      ],
      "js": [
        "content-webnote.js"
      ]
    }
  ]
}